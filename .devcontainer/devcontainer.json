{
  "name": "Football Commentary Dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "commentary",
  "workspaceFolder": "/workspace/commentary",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "njpwerner.autodocstring"
        // Add any other extensions you commonly use for Python development
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.pylintEnabled": true,
        "python.linting.enabled": true,
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "remoteUser": "vscode", // Or root if needed, but vscode is generally safer if the image supports it
  "postCreateCommand": "pip install --user -r requirements.txt" // Ensures dependencies are installed
}
